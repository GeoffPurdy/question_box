<div class="panel radius">
	<div class="row">
		<div class="large-10 large-offset-1 columns">
			<h3 class="text-center">List your favorite tags!</h3>
			<%= simple_form_for @current_user, :method => :PUT, remote: true do |f| %>
			<%= f.input :tag_list, label: false, placeholder: "tags" %>
			<div class="text-center">
				<%= f.button :submit, "submit", :class => "radius" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
<div class="tags">
<% @current_user.tag_names.each do |t_name| %>
<ul><%= "Question(s) related to the tag #{t_name}" %></ul>
  <% Question.tagged_with(t_name).each do |q| %>
    <ul></br> <%= link_to q.title, q %> </ul>
  <% end %>
<% end %>
</div>
